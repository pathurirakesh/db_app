<h1>Listing microoposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @microoposts.each do |microopost| %>
      <tr>
        <td><%= microopost.content %></td>
        <td><%= microopost.user_id %></td>
        <td><%= link_to 'Show', microopost %></td>
        <td><%= link_to 'Edit', edit_microopost_path(microopost) %></td>
        <td><%= link_to 'Destroy', microopost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

